// Create a file called CrudExample.cs
// Create a class called Expense that has properties as Id(int),Description(string), Amount(double), Date(DateTime)

using System;
namespace SampleConApp
{
    class Expense
    {
        public int Id { get; set; }
        public string Description { get; set; }
        public double Amount { get; set; }
        public DateTime Date { get; set; }
        DisplayFunction();
    }

    class Ex08_CrudExample
    {
        static void Main(string[] args)
        {
            int id=MyConsole.GetInteger("Enter the ID of the product");
            string description= MyConsole.GetString("Enter the description of the product");
            double amount=MyConsole.GetDouble("Enter the amount of the product");
            Console.WriteLine("Enter the date of buying the product");
            DateTime date=ReadLine();
            Expense expense = new Expense
            {
                Id=id,
                Description=description,
                Amount=amount,
                Date=date
            };
            //DisplayFunction();
        }

        public static void DisplayFunction()
        {
            Console.WriteLine("The product id is " + expense.Id);
            Console.WriteLine("The product description is " + expense.Description);
            Console.WriteLine("The product amount is " + expense.Amount);
            Console.WriteLine("The product date of billing is " + expense.Date);
            return;
        }
        
    }
}
